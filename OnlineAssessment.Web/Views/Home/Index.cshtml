@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <style>
        /* Base Styles */
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            color: #333;
        }

        .section {
            padding: 80px 0;
        }

        .section-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 2rem;
            color: #1e293b;
        }

        .section-subtitle {
            font-size: 1.1rem;
            color: #64748b;
            margin-bottom: 3rem;
            max-width: 700px;
        }

        .btn-primary-custom {
            background-color: #3b82f6;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary-custom:hover {
            background-color: #2563eb;
            transform: translateY(-2px);
        }

        .btn-outline-custom {
            background-color: transparent;
            color: #3b82f6;
            border: 2px solid #3b82f6;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-outline-custom:hover {
            background-color: #3b82f6;
            color: white;
        }

        /* Hero Section */
        .hero-section {
            background: white;
            padding: 80px 0 40px;
            position: relative;
        }

        .hero-content {
            display: flex;
            align-items: center;
            gap: 3rem;
        }

        .hero-text {
            flex: 1;
        }

        .hero-image {
            flex: 1;
            text-align: right;
        }

        .hero-image img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            color: #1e293b;
            line-height: 1.2;
        }

        .hero-title span {
            background-color: #3b82f6;
            color: white;
            padding: 0 10px;
            border-radius: 5px;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            color: #64748b;
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .hero-buttons {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .hero-stats {
            display: flex;
            gap: 3rem;
            margin-top: 2rem;
        }

        .hero-stat {
            display: flex;
            flex-direction: column;
        }

        .hero-stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: #3b82f6;
        }

        .hero-stat-label {
            font-size: 0.9rem;
            color: #64748b;
        }

        .partners {
            padding: 30px 0;
            border-top: 1px solid #e2e8f0;
            border-bottom: 1px solid #e2e8f0;
            margin-top: 40px;
        }

        .partners-list {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 2rem;
            opacity: 0.7;
        }

        .partners-list img {
            height: 30px;
            width: auto;
        }

        /* About Section */
        .about-section {
            background-color: #f8fafc;
            padding: 80px 0;
        }

        .about-content {
            display: flex;
            gap: 3rem;
            align-items: center;
        }

        .about-text {
            flex: 1;
        }

        .about-images {
            flex: 1;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;
        }

        .about-image {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .about-image img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        /* Features Section */
        .features-section {
            padding: 80px 0;
            background-color: white;
        }

        .features-intro {
            margin-bottom: 3rem;
            text-align: center;
        }

        .features-dashboard {
            margin-bottom: 4rem;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .features-dashboard img {
            width: 100%;
            height: auto;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }

        .feature-item {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .feature-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            background-color: #eff6ff;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #3b82f6;
            font-size: 1.5rem;
        }

        .feature-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #1e293b;
        }

        .feature-description {
            font-size: 0.95rem;
            color: #64748b;
            line-height: 1.5;
        }

        /* Service Learning Section */
        .service-section {
            background-color: #f8fafc;
            padding: 80px 0;
        }

        .service-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .service-card {
            background-color: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .service-card.primary {
            background-color: #3b82f6;
            color: white;
        }

        .service-card.primary h3 {
            color: white;
        }

        .service-card.primary p {
            color: rgba(255, 255, 255, 0.9);
        }

        .service-card.primary .btn-outline-white {
            color: white;
            border-color: white;
        }

        .service-card.primary .btn-outline-white:hover {
            background-color: white;
            color: #3b82f6;
        }

        .service-card-img {
            overflow: hidden;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .service-card-img img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        /* Pricing Section */
        .pricing-section {
            padding: 80px 0;
            background-color: white;
        }

        .pricing-intro {
            text-align: center;
            margin-bottom: 3rem;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        .pricing-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .pricing-plan {
            background-color: white;
            border: 1px solid #e2e8f0;
            border-radius: 10px;
            padding: 2rem;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .pricing-plan:hover {
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transform: translateY(-5px);
        }

        .pricing-header {
            margin-bottom: 2rem;
            text-align: center;
        }

        .pricing-name {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .pricing-description {
            font-size: 0.9rem;
            color: #64748b;
        }

        .pricing-price {
            font-size: 2.5rem;
            font-weight: 700;
            color: #3b82f6;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .pricing-price span {
            font-size: 1rem;
            color: #64748b;
            font-weight: 400;
        }

        .pricing-features {
            list-style: none;
            padding: 0;
            margin: 0 0 2rem 0;
            flex-grow: 1;
        }

        .pricing-features li {
            margin-bottom: 0.75rem;
            position: relative;
            padding-left: 1.5rem;
            color: #64748b;
        }

        .pricing-features li::before {
            content: "✓";
            position: absolute;
            left: 0;
            color: #3b82f6;
            font-weight: bold;
        }

        .pricing-plan .btn {
            margin-top: auto;
            width: 100%;
            text-align: center;
        }

        /* CTA Section */
        .cta-section {
            background-color: #3b82f6;
            padding: 80px 0;
            color: white;
        }

        .cta-content {
            display: flex;
            align-items: center;
            gap: 3rem;
        }

        .cta-text {
            flex: 1;
        }

        .cta-image {
            flex: 1;
        }

        .cta-image img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .cta-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: white;
        }

        .cta-description {
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 2rem;
            font-size: 1.1rem;
        }

        .cta-form {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .cta-input {
            flex: 1;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            border: none;
            font-size: 1rem;
        }

        .btn-white {
            background-color: white;
            color: #3b82f6;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-white:hover {
            background-color: #f1f5f9;
            transform: translateY(-2px);
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .hero-content, .about-content, .cta-content {
                flex-direction: column;
            }

            .hero-image, .about-images, .cta-image {
                order: -1;
            }

            .pricing-grid {
                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .section-title {
                font-size: 2rem;
            }

            .hero-buttons {
                flex-direction: column;
            }

            .hero-stats {
                flex-wrap: wrap;
                gap: 1.5rem;
            }

            .partners-list {
                flex-wrap: wrap;
                justify-content: center;
            }

            .about-images {
                grid-template-columns: 1fr 1fr;
            }
        }
    </style>
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">Embark on a Journey of <span>Knowledge</span></h1>
                <p class="hero-subtitle">Enhance your skills with our comprehensive online assessment platform. Take tests, track your progress, and improve your understanding with real-time feedback.</p>
